{
    "manifest_version": 2,
    "name": "CopyHyperLink",
    "version": "0.1",
    "description": "复制当前窗口标题为超链接",
    "icons":
    {
        "16": "img/link_16.png",
        "48": "img/link_48.png",
        "128": "img/link_128.png"
    },
    "browser_action":
    {
        "default_icon": "img/link_16.png",
        "default_popup": "popup.html"
    },
    "permissions":[
        "tabs",
        "contextMenus",
        "http://*/*", "https://*/*"
    ],
    "background":{
      "scripts": ["background.js"]
    }

}
